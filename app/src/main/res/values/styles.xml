<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_for_text</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:layout_marginTop">@dimen/margin_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextViewSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_settings</item>
        <item name="android:layout_marginTop">@dimen/margin_settings_20</item>
        <item name="android:layout_marginBottom">@dimen/margin_settings_20</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="ImageViewSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_settings_20</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
        <item name="android:trackTint" tools:targetApi="m">@color/light_gray</item>
        <item name="android:thumbTint">@color/gray</item>
        <item name="android:checked">false</item>
    </style>
</resources>